<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/Go_button"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_xxx_large"

    >

    <TextView
        android:id="@+id/title_num"
        android:layout_width="@dimen/spacing_x_large"
        android:layout_height="@dimen/spacing_x_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:background="@drawable/background_num"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_25ssp"
        android:fontFamily="@font/yakout_linotype_light_bold_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/page_num"
        android:layout_width="@dimen/spacing_m_large"
        android:layout_height="@dimen/spacing_m_large"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_large"
        android:text="1"
        android:fontFamily="@font/yakout_linotype_light_bold_1"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="@+id/title_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_num" />

    <TextView
        android:id="@+id/titleContain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_x_medium"
        android:fontFamily="@font/yakout_linotype_light_bold_1"
        android:gravity="center"
        android:text="الحروف حسب ترتيبها مخارجها"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@+id/title_num"
        app:layout_constraintEnd_toStartOf="@+id/title_num"
        app:layout_constraintStart_toEndOf="@+id/page_num"
        app:layout_constraintTop_toTopOf="@+id/title_num" />

</androidx.constraintlayout.widget.ConstraintLayout>