<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:rotationY="180"
    android:id="@+id/cardPagerAboutSchoolImage"
    app:cardCornerRadius="0dp"
    >

    <ImageView
        android:id="@+id/imgPagerAboutSchoolImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_m_large"
        android:scaleType="fitCenter"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiePagerAboutImageAnimation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_animation_loading"
        android:layout_gravity="center"
        />


</androidx.cardview.widget.CardView>