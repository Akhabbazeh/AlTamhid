<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:id="@+id/card_item_content"
    android:layout_marginTop="@dimen/spacing_x_medium"
    android:layout_marginHorizontal="@dimen/spacing_middle"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_middle"
        >

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/spacing_x_medium"
            android:src="@drawable/img_title_page_number"
            app:tint="@color/primary_color"/>

        <TextView
            android:id="@+id/txtRecyclerNameParent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="رياضيات"
            style="@style/style_text_Define_him"
            android:layout_marginStart="@dimen/spacing_middle"
            android:layout_gravity="center_vertical"
            />


        <TextView
            android:id="@+id/txt_page_num_content_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:gravity="center"
            style="@style/style_text_Define_him"
            android:layout_marginEnd="7dp"
            android:textColor="@color/primary_color"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />


        <ImageView
            android:id="@+id/imgRecyclerArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginEnd="@dimen/spacing_middle"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>