<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/backgroundNav"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="عدد مرات التكرار"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/yakout_linotype_light_bold_1"
            android:layout_marginEnd="@dimen/spacing_middle"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/btnRemoveDialog"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:tint="@color/primary_color"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:src="@drawable/remove_icon"
                    />

                <TextView
                    android:id="@+id/counterDialog"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/yakout_linotype_light_bold_1"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    />


                <ImageView
                    android:id="@+id/btnAddDialog"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:tint="@color/primary_color"
                    android:src="@drawable/add_icon"
                    />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/okay_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="موافق"
                android:gravity="center"
                android:textColor="@color/backgroundNav"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/yakout_linotype_light_bold_1"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_okey"
                android:layout_marginHorizontal="10dp"
                app:tint="@color/titlePageColor"

                />
            <TextView
                android:id="@+id/cancel_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="إلغاء"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/yakout_linotype_light_bold_1"
                android:layout_height="match_parent"
                android:background="@color/backgroundNav"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>

        

        
        
        
        
        
        
        
        
        
        
        
    </LinearLayout>
</FrameLayout>
